import("//mojo/public/tools/bindings/mojom.gni")

assert(!is_android)

source_set("customize_buttons") {
  sources = [ "customize_buttons_handler.h" ]
  public_deps = [
    ":mojo_bindings",
    "//chrome/browser:browser_public_dependencies",
    "//chrome/browser/ui/views/side_panel",
    "//chrome/common",
  ]
}
